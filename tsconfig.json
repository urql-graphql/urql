{
  "compilerOptions": {
    "baseUrl": "./",
    "types": ["node"],
    "paths": {
      "urql": ["packages/react-urql/src"],
      "*-urql": ["packages/*-urql/src"],
      "@urql/exchange-*": ["exchanges/*/src"],
      "@urql/core/*": ["packages/core/src/*"],
      "@urql/*": ["packages/*-urql/src", "packages/*/src"]
    },
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "noUnusedLocals": true,
    "noEmit": true,
    "lib": ["dom", "esnext"],
    "jsx": "preserve",
    "module": "es2015",
    "moduleResolution": "node",
    "target": "esnext",
    "strict": true,
    "noImplicitAny": false,
    "noUnusedParameters": true,
    "skipLibCheck": true
  },
  "include": ["packages", "exchanges"],
  "exclude": [
    "**/*.test.ts",
    "**/*.test.tsx",
    "**/*.spec.ts",
    "**/*.spec.tsx",
    "scripts",
    "examples",
    "packages/*/examples",
    "packages/*/dist",
    "exchanges/*/examples",
    "exchanges/*/dist",
    "node_modules"
  ]
}
