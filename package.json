{
  "name": "urql",
  "version": "0.3.0-next1",
  "description": "A naive React Graphql library",
  "main": "dist/index.js",
  "umd:main": "dist/index.umd.js",
  "module": "dist/index.mjs",
  "source": "src/index.ts",
  "scripts": {
    "build": "npm run build:clean && npm run build:bundle",
    "build:bundle": "microbundle build --no-sourcemap --target web",
    "build:clean": "rimraf dist",
    "build:ts": "tsc",
    "demo:start:graphql-server": "node example/src/server/index.js",
    "demo:start:app": "webpack-dev-server --hot --inline --config \"example/webpack.config.js\"",
    "demo": "builder concurrent demo:start:app demo:start:graphql-server",
    "lint": "tslint --project .",
    "test": "jest",
    "bundlesize": "bundlesize",
    "prettier": "prettier --write \"{,!(node_modules|custom-typings|types)/**/}*.{js,jsx,ts,tsx,json,md}\""
  },
  "author": "Ken Wheeler",
  "license": "MIT",
  "jest": {
    "setupFiles": [
      "./src/test-utils/setupTests.ts"
    ],
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "snapshotSerializers": [
      "enzyme-to-json/serializer"
    ],
    "testRegex": "(src/.*(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "collectCoverageFrom": [
      "<rootDir>/src/**/*.{ts,tsx}"
    ],
    "coveragePathIgnorePatterns": [
      "<rootDir>/src/test-utils",
      "<rootDir>/src.*/index.ts"
    ]
  },
  "lint-staged": {
    "*.{js,jsx,json,md}": [
      "prettier --write",
      "git add"
    ],
    "*.{ts,tsx}": [
      "tslint --fix",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "bundlesize": [
    {
      "path": "./dist/index.mjs",
      "maxSize": "8 kB"
    }
  ],
  "devDependencies": {
    "@types/enzyme": "^3.1.15",
    "@types/graphql": "^14.0.3",
    "@types/jest": "^23.3.9",
    "@types/react": "^16.0.34",
    "@types/react-dom": "^16.0.3",
    "@types/uuid": "^3.4.3",
    "awesome-typescript-loader": "^5.2.1",
    "builder": "^3.2.3",
    "bundlesize": "^0.17.0",
    "cors": "^2.8.4",
    "coveralls": "^3.0.0",
    "enzyme": "^3.7.0",
    "enzyme-adapter-react-16": "^1.7.0",
    "enzyme-to-json": "^3.3.5",
    "express": "^4.16.2",
    "express-graphql": "^0.7.1",
    "graphql-tools": "^4.0.3",
    "husky": "^1.2.0",
    "isomorphic-fetch": "^2.2.1",
    "jest": "^23.6.0",
    "lint-staged": "^8.1.0",
    "microbundle": "^0.7.0",
    "prettier": "^1.15.2",
    "prop-types": "^15.6.0",
    "react": "^16.0.0-0",
    "react-addons-test-utils": "^15.6.2",
    "react-dom": "^16.0.0-0",
    "react-test-renderer": "^16.2.0",
    "regenerator-runtime": "^0.11.1",
    "rimraf": "^2.6.2",
    "ts-jest": "^23.10.5",
    "tslint": "^5.11.0",
    "tslint-config-prettier": "^1.16.0",
    "tslint-react": "^3.6.0",
    "typescript": "^3.1.6",
    "webpack": "^4.26.1",
    "webpack-cli": "^3.1.2",
    "webpack-dev-server": "^3.1.10"
  },
  "peerDependencies": {
    "prop-types": "^15.6.0",
    "react": "^16.0.0-0",
    "react-dom": "^16.0.0-0"
  },
  "dependencies": {
    "create-react-context": "^0.2.3",
    "graphql": "^14.0.2",
    "rxjs": "^6.3.3",
    "uuid": "^3.3.2",
    "wonka": "^1.4.1"
  },
  "sideEffects": false
}
